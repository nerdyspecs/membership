@model membership.Models.Member 

@{
    var memberLevel = ViewData["member_level"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Member Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container">
        <h2>Welcome Back, @Model.Username </h2>
        <p>Level: @memberLevel</p>
        <p>Total Points: @Model.TotalPoints</p>
        <p>Total Transaction: @ViewData["total_transactions"]</p>
        <a href="@Url.Action("RedeemHome", "Members")" class="btn btn-primary">
            RedeemPage
        </a>

        <a href="@Url.Action("Edit", "Members", new { member_id = Model.MemberId })" class="btn btn-primary">
            Update Profile
        </a>
        @if (Model.Transactions != null)
        {
            <h3>Transactions:</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Transaction Id
                        </th>
                        <th>
                            Transaction Title
                        </th>
                        <th>
                            TransactionTotal
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var transaction in Model.Transactions)
                    {
                        <tr>
                            <td>
                                @transaction.TransactionId

                            </td>
                            <td>
                                @transaction.TransactionTitle
                            </td>
                            <td>
                                @transaction.Total
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No transactions found.</p>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
